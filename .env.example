# Zoho API Configuration
# Get these from your Zoho API Console (Server-based Application)

# OAuth Client ID
ZOHO_CLIENT_ID=

# OAuth Client Secret (keep this secret!)
ZOHO_CLIENT_SECRET=

# OAuth Refresh Token (obtained via OAuth flow)
# Required scopes: ZohoCRM.modules.leads.CREATE, Desk.tickets.CREATE
ZOHO_REFRESH_TOKEN=

# Zoho API Domain (varies by data center)
# US: www.zohoapis.com | EU: www.zohoapis.eu | IN: www.zohoapis.in | AU: www.zohoapis.com.au
ZOHO_API_DOMAIN=www.zohoapis.com

# Zoho Accounts Domain (for OAuth token refresh)
# US: accounts.zoho.com | EU: accounts.zoho.eu | IN: accounts.zoho.in | AU: accounts.zoho.com.au
ZOHO_ACCOUNTS_DOMAIN=accounts.zoho.com

# Zoho Desk Organization ID
# Find this in Zoho Desk > Settings > Developer Space > API
ZOHO_DESK_ORG_ID=

# Zoho Desk Department ID (optional, for routing tickets)
ZOHO_DESK_DEPARTMENT_ID=

# Datadog RUM Configuration
# Get these from Datadog Dashboard > UX Monitoring > RUM > Applications
# See DATADOG_SETUP.md for detailed setup instructions

# Datadog Application ID (required)
NEXT_PUBLIC_DATADOG_APPLICATION_ID=

# Datadog Client Token (required)
NEXT_PUBLIC_DATADOG_CLIENT_TOKEN=

# Datadog Site (varies by region)
# US1: datadoghq.com | US3: us3.datadoghq.com | US5: us5.datadoghq.com | EU: datadoghq.eu
NEXT_PUBLIC_DATADOG_SITE=datadoghq.com

# Service name for RUM
NEXT_PUBLIC_DATADOG_SERVICE=humaneers-website

# Environment (development, staging, production)
NEXT_PUBLIC_DATADOG_ENV=development

# Application version (should match package.json)
NEXT_PUBLIC_DATADOG_VERSION=0.2.0

# Sample rate (0-100, percentage of sessions to track)
# Production: 20-50 for cost control, Development: 100
NEXT_PUBLIC_DATADOG_SAMPLE_RATE=100

# Track user sessions (true/false)
NEXT_PUBLIC_DATADOG_TRACK_SESSIONS=true

# Track resource loading (true/false)
NEXT_PUBLIC_DATADOG_TRACK_RESOURCES=true

# Track long tasks (true/false)
NEXT_PUBLIC_DATADOG_TRACK_LONG_TASKS=true
